{
  "name": "lazbot",
  "version": "1.0.0",
  "description": "LazBot - WhatsApp Bot with Sticker Features",
  "main": "dist/app/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app/index.js",
    "dev": "tsx watch app/index.ts",
    "clean": "rimraf dist",
    "setup": "./setup.sh",
    "lint": "tsc --noEmit",
    "prestart": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs lazbot",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t lazbot .",
    "docker:run": "docker run -d --name lazbot -p 3000:3000 lazbot",
    "docker:stop": "docker stop lazbot && docker rm lazbot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "sticker"
  ],
  "author": "LazBot Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "ffmpeg-static": "^5.2.0",
    "fs-extra": "^11.3.0",
    "puppeteer": "^24.15.0",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.5",
    "whatsapp-web.js": "^1.31.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.9",
    "pm2": "^6.0.8",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}